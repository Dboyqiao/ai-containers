mpich-horovod-inc-onnx: mpich-horovod-inc
	@DOCKER_BUILDKIT=${DOCKER_BUILDKIT} \
	 BASE_IMAGE_NAME=${BASE_IMAGE_NAME} \
	 BASE_IMAGE_TAG=${BASE_IMAGE_TAG} \
	 FINAL_IMAGE_NAME=${FINAL_IMAGE_NAME} \
	 PACKAGE_OPTION=${PACKAGE_OPTION} \
